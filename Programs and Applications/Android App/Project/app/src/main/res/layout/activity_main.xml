<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/environment_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Informação sobre o ambiente"
        android:textColor="#0070C0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/environment_info_text"
        android:background="@drawable/blue_border"
        android:padding="1sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/environment_temperature_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingEnd="50sp"
                android:paddingStart="5sp" />

            <TextView
                android:id="@+id/environment_temperature_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="None"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingHorizontal="5sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/environment_humidity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidade relativa"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingEnd="50sp"
                android:paddingStart="5sp"/>

            <TextView
                android:id="@+id/environment_humidity_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="None"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingHorizontal="5sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/environment_noise_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruído"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingEnd="50sp"
                android:paddingStart="5sp"/>

            <TextView
                android:id="@+id/environment_noise_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="None"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingHorizontal="5sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/environment_brightness_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luminosidade"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingEnd="50sp"
                android:paddingStart="5sp"/>

            <TextView
                android:id="@+id/environment_brightness_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="None"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingHorizontal="5sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/environment_co2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CO2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingEnd="50sp"
                android:paddingStart="5sp" />

            <TextView
                android:id="@+id/environment_co2_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="None"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/blue_border"
                android:paddingHorizontal="5sp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/user_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Informação sobre o utilizador"
        android:textColor="#C00000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/table" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/red_border"
        android:padding="1sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_info_text">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/user_temperature_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border"
                android:outlineProvider="none"
                android:paddingStart="5sp"
                android:paddingEnd="50sp"
                android:text="Temperatura"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_temperature_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:paddingHorizontal="5sp"
                android:text="None"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/user_bpm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border"
                android:paddingStart="5sp"
                android:paddingEnd="50sp"
                android:text="Frequência cardíaca"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_bpm_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:paddingHorizontal="5sp"
                android:text="None"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/user_respiration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border"
                android:paddingStart="5sp"
                android:paddingEnd="50sp"
                android:text="Frequência respiratória"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_respiration_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/red_border"
                android:paddingHorizontal="5sp"
                android:text="None"
                android:textSize="16sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <ImageView
            android:id="@+id/image_front_view"
            android:layout_width='0dp'
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/sentado_direito" />

        <ImageView
            android:id="@+id/image_side_view"
            android:layout_width='0dp'
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/inclinado_direito" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>